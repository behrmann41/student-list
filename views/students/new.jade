extends ../layout

block content
  .container
    h1= title
    .row
      .col-md-5
        .text-center
          include errors.jade
        form.form-horizontal(action='/students/new', method="POST")
          .form-group
            label.col-sm-2.label-control(for='firstname') Firstname:
            .col-sm-10
              input#firstname.form-control(type='text' name='firstname' required)
          .form-group
            label.col-sm-2.label-control(for='lastname') Lastname:
            .col-sm-10
              input#lastname.form-control(type='text' name='lastname' required)
          .form-group
            label.col-sm-2.label-control(for='phonenumber') Phone Number:
            .col-sm-10
              input#phonenumber.form-control(type='tel' name='phonenumber' required)
          .form-group
            input.btn.btn-primary(type='submit' value='Add Student')