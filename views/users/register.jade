extends ../layout

block content
  .container
    h1= title
    .row
      .col-md-5
        .text-center
          include errors.jade
        form.form-horizontal(action='/users/register', method="POST")
          .form-group
            label.col-sm-2.label-control(for='username') Username:
            .col-sm-10
              input#username.form-control(type='text' name='username')
          .form-group
            label.col-sm-2.label-control(for='email') Email:
            .col-sm-10
              input#email.form-control(type='email' name='email')
          .form-group
            label.col-sm-2.label-control(for='password') Password:
            .col-sm-10
              input#password.form-control(type='password' name='password')
          .form-group
            label.col-sm-2.label-control(for='pwconfirm') Confirm Password:
            .col-sm-10
              input#pwconfirm.form-control(type='password' name='pwconfirm')
          .form-group
            input.btn.btn-primary(type='submit' value='Create User')
